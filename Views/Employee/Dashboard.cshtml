@model IEnumerable<EmployeeManagementSystem.Models.LeaveRequest>

@{
    ViewData["Title"] = "Employee Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="fw-bold">My Dashboard</h2>
        <p class="text-muted">Welcome back! Here is your leave summary.</p>
    </div>
</div>

<div class="row g-3 mb-5">
    <div class="col-md-3">
        <div class="card shadow-sm border-0 bg-primary text-white h-100">
            <div class="card-body text-center">
                <h1 class="display-4 fw-bold">@ViewBag.Total</h1>
                <span>Total Requests</span>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 bg-warning text-dark h-100">
            <div class="card-body text-center">
                <h1 class="display-4 fw-bold">@ViewBag.Pending</h1>
                <span>Pending</span>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 bg-success text-white h-100">
            <div class="card-body text-center">
                <h1 class="display-4 fw-bold">@ViewBag.Approved</h1>
                <span>Approved</span>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 bg-danger text-white h-100">
            <div class="card-body text-center">
                <h1 class="display-4 fw-bold">@ViewBag.Rejected</h1>
                <span>Rejected</span>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h5 class="mb-0 fw-bold">Recent Applications</h5>
        <a asp-action="ApplyLeave" class="btn btn-primary btn-sm px-4 rounded-pill">Apply for Leave</a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light text-muted">
                    <tr>
                        <th class="ps-4">Type</th>
                        <th>Duration</th>
                        <th>Status</th>
                        <th>Applied On</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-dark">@item.LeaveType</td>
                            <td>
                                <span class="d-block text-dark">@item.StartDate.ToShortDateString() - @item.EndDate.ToShortDateString()</span>
                                <small class="text-muted">@((item.EndDate - item.StartDate).TotalDays + 1) Days</small>
                            </td>
                            <td>
                                @if(item.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark rounded-pill">Pending</span>
                                }
                                else if(item.Status == "Approved")
                                {
                                    <span class="badge bg-success rounded-pill">Approved</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger rounded-pill">Rejected</span>
                                }
                            </td>
                            <td class="text-muted">@item.AppliedAt.ToShortDateString()</td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">No recent leave requests found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer bg-white text-center py-3">
        <a asp-action="MyLeaves" class="text-decoration-none fw-bold">View All Requests &rarr;</a>
    </div>
</div>
