@model IEnumerable<EmployeeManagementSystem.Models.LeaveRequest>

@{
    ViewData["Title"] = "Employee Dashboard";
}

<h2>My Dashboard</h2>
<hr />

<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">Total Leaves</div>
            <div class="card-body">
                <h5 class="card-title">@ViewBag.Total</h5>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-header">Pending</div>
            <div class="card-body">
                <h5 class="card-title">@ViewBag.Pending</h5>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Approved</div>
            <div class="card-body">
                <h5 class="card-title">@ViewBag.Approved</h5>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-danger mb-3">
            <div class="card-header">Rejected</div>
            <div class="card-body">
                <h5 class="card-title">@ViewBag.Rejected</h5>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mt-4 mb-2">
    <h4>Recent Applications</h4>
    <a asp-action="ApplyLeave" class="btn btn-primary">Apply for Leave</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Type</th>
            <th>Duration</th>
            <th>Status</th>
            <th>Applied On</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LeaveType</td>
                <td>@item.StartDate.ToShortDateString() - @item.EndDate.ToShortDateString()</td>
                <td>
                    @if(item.Status == "Pending")
                    {
                        <span class="badge bg-warning text-dark">Pending</span>
                    }
                    else if(item.Status == "Approved")
                    {
                        <span class="badge bg-success">Approved</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Rejected</span>
                    }
                </td>
                <td>@item.AppliedAt.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="MyLeaves">View All</a>
